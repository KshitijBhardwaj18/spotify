// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  userId String
  email String
  playtlist Playlist[] @relation("UserToPlaylist")
}


model Playlist{
  id String @id @default(uuid())
  userId String
  user User @relation("UserToPlaylist", fields:[userId], references: [id] )
  song Song[] @relation("PlaylistToSong")
}

model Song{
  id String @id @default(uuid())
  url String
  playlistId String
  playlist Playlist @relation("PlaylistToSong", fields: [playlistId], references: [id])
}
